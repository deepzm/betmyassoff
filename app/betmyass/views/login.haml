.container
	- if !@msg.nil?
		.alert.alert-warning.alert-dismissible{ "role" => "alert" }
			%button.close{ "type" => "button", "data-dismiss" => "alert" }
				%span{ "aria-hidden" => "true" } &times;
				%span.sr-only Close
			%strong #{@msg}
		

	%div{ "style" => "margin-top:30px"}
		%d.col-md-4.col-md-offset-4
			.panel.panel-default
				.panel-heading
					%h3.panel-title
						%strong Login
				.panel-body
					%form{ "role" => "form", "method" => "post", "action" => "/login" }
						.form-group
							%label Username
							%input.form-control{ "type" => "text", "name" => "user[username]", "style" => "border-radius:0px", "placeholder" => "Username" }
						.form-group
							%label Password
							%input.form-control{ "type" => "password", "name" => "user[password]", "style" => "border-radius:0px", "placeholder" => "Password" }
						.form-group
							%button.btn.btn-sm.btn-default{ "type" => "submit"} Login
