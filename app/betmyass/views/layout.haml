!!! 5
%html{:lang => "en", "ng-app" => "betMyAssApp"}
  %head
    %meta{ :charset => "utf-8" }
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{"name" => "viewport", "content" => "width=device-width, initial-scale=1"}
    %title= 'Bet my ass off!!!'
    %link{ :rel => "stylesheet", :href => "vendor/bootstrap/bootstrap.css" }
    %link{ :rel => "stylesheet", :href => "css/app.css" }
  %body
    .navbar-wrapper
      .container-fluid
        .navbar.navbar-inverse.navbar-static-top{"role" => "navigation"}
          .container
            .navbar-header
              %button{ "class" => "navbar-toggle", "data-toggle" => "collapse",  "data-target" => ".navbar-collapse" }
                %span{ "class" => "sr-only" } Toggle navigation
                %span{ "class" => "icon-bar"}
                %span{ "class" => "icon-bar"}
                %span{ "class" => "icon-bar"}
              %a{ "class" => "navbar-brand", "href" => "#" } Bet my ass off!!!
            .navbar-collapse.collapse
              %ul.nav.navbar-nav
                %li.active
                  %a{ "href" => "#"} Home
              - if !@user.nil?
                = haml :user_header, :layout => false
      =yield

    %script{ :src => "vendor/jquery/jquery.js"}
    %script{ :src => "vendor/angular/angular.js"}
    %script{ :src => "vendor/angular-route/angular-route.js"}
    %script{ :src => "vendor/bootstrap/bootstrap.js"}
    %script{ :src => "script/app.js"}